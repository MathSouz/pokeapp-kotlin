<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PokeApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pokemon_red_primary</item>
        <item name="colorPrimaryVariant">@color/pokemon_red_darker_primary</item>
        <item name="colorOnPrimary">@color/dark_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pokemon_red_secondary</item>
        <item name="colorSecondaryVariant">@color/pokemon_red_darker_secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PokeApp.NoTitleBar">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PokeApp.NoTitleBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PokeApp.NoTitleBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PokeApp.NoTitleBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>